<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApplication.Pages.NewsDetailsPage"
             BackgroundColor="#FDF6E3">

    <ContentPage.ToolbarItems>
        <!-- Ensure share.svg exists in Resources/Images with Build Action: MauiImage -->
        <ToolbarItem IconImageSource="share.svc"
                     Order="Primary"
                     Text="Share"
                     Clicked="TbShare_Clicked"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*">
        <Image Grid.Row="0" x:Name="ImgNews" HeightRequest="300" Aspect="AspectFill" />
        <Label Grid.Row="1"
               x:Name="LblTitle"
               Margin="8"
               FontSize="20"
               FontAttributes="Bold,Italic"
               TextDecorations="Underline" />
        <Label Grid.Row="2"
               x:Name="LblContent"
               Margin="8"
               FontSize="16"
               LineBreakMode="WordWrap"
               TextColor="Black" />
    </Grid>

</ContentPage>
